<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Climbing.Guide.Mobile.Forms.Resources.FontFileResources">
   <OnPlatform x:Key="FontAwesomeRegularId" x:TypeArguments="x:String">
      <On Platform="iOS" Value="Font Awesome 5 Free Regular" />
      <On Platform="Android" Value="fonts/fa-regular-400.otf#Font Awesome 5 Free Regular" />
   </OnPlatform>
   <Style x:Key="FontAwesomeRegular" TargetType="Label">
      <Setter Property="FontFamily" Value="{StaticResource FontAwesomeRegularId}" />
   </Style>

   <OnPlatform x:Key="FontAwesomeSolidId" x:TypeArguments="x:String">
      <On Platform="iOS" Value="Font Awesome 5 Free Solid" />
      <On Platform="Android" Value="fonts/fa-solid-900.otf#Font Awesome 5 Free Solid" />
   </OnPlatform>
   <Style x:Key="FontAwesomeSolid" TargetType="Label">
      <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSolidId}" />
   </Style>

   <OnPlatform x:Key="FontAwesomeBrandsId" x:TypeArguments="x:String">
      <On Platform="iOS" Value="Font Awesome 5 Brands" />
      <On Platform="Android" Value="fonts/fa-brands-regular-400.otf#Font Awesome 5 Brands" />
   </OnPlatform>
   <Style x:Key="FontAwesomeBrands" TargetType="Label">
      <Setter Property="FontFamily" Value="{StaticResource FontAwesomeBrandsId}" />
   </Style>
</ResourceDictionary>