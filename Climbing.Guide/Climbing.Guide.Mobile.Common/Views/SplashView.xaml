<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="Climbing.Guide.Mobile.Common.Views.SplashView"
   Title="{Binding Title}">

   <ContentPage.Resources>
      <ResourceDictionary>
         <!--Page Level Resources: Compatibile with Xamarin Live Player -->
         <Color x:Key="LauncherBackgroundColor">#37464f</Color>
      </ResourceDictionary>
   </ContentPage.Resources>

   <Grid BackgroundColor="{StaticResource LauncherBackgroundColor}">
      <Image Source="logo.png"
             Aspect="AspectFit" />
   </Grid>
</ContentPage>